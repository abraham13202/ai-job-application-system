{
  "manifest_version": 3,
  "name": "Job Application Auto-Filler",
  "version": "1.0.0",
  "description": "Automatically fills job applications with your resume data",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.seek.com.au/*",
    "https://au.indeed.com/*",
    "https://www.linkedin.com/*",
    "https://*.greenhouse.io/*",
    "https://*.lever.co/*",
    "https://*.workday.com/*",
    "https://*.myworkdayjobs.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.seek.com.au/*",
        "https://au.indeed.com/*",
        "https://www.linkedin.com/*",
        "https://*.greenhouse.io/*",
        "https://*.lever.co/*",
        "https://*.workday.com/*",
        "https://*.myworkdayjobs.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
